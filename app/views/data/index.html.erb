<script>

document.addEventListener('DOMContentLoaded', function(event) {
  
 const ctx = document.getElementById('myChart');

 const data = {
  labels: [
    'AirBnb',
    'Booking.com',
    'Vrbo',
    'Direct'
  ],
  datasets: [{
    label: 'Bookings',
    data: [100, 50, 100, 100],
    backgroundColor: [
      'rgb(255, 99, 132)',
      'rgb(54, 162, 235)',
      'rgb(36, 90, 188)',
      'rgb(50, 205, 50)'
    ],
    hoverOffset: 4
  }]
};

  new Chart(ctx, {
    type: 'doughnut',
    data: data,
    options: {
      scales: {
        y: {
          beginAtZero: true
        }
      }
    }
  });

});  
 
</script>